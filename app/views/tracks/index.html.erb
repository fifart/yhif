<p id="notice"><%= notice %></p>

<h1>Tracks</h1>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th>Title</th>
      <th>Release</th>
      <th>Description</th>
      <th>Download</th>
      
      <th>Album</th>
      <th>Artist</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tracks.each do |track| %>
      <tr>
        <td><%= track.title %></td>
        <td><%= track.release %></td>
        <td><%= track.description %></td>
        <td><%= track.download %></td>
        
        <td><%= @albums.find(track.album_id).title %></td>
        <td><%= track.artist %></td>
        <td><%= link_to 'Show', track, class: 'btn btn-success btn-sm' %></td>
        <td><%= link_to 'Edit', edit_track_path(track), class: 'btn btn-warning btn-sm' %></td>
        <td><%= link_to 'Destroy', track, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Track', new_track_path, class: 'btn btn-primary' %>
